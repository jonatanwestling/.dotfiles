# --- Jonatan's Ghostty config ---
macos-titlebar-style = tabs
macos-titlebar-proxy-icon = hidden
title = " "

# Initial size
window-width = 115
window-height = 40

# Custom icon 
macos-icon = custom
# Font
font-family = "0xProto Nerd Font"
font-size = 14

# Caret style 
cursor-style = block
cursor-style-blink = false
shell-integration-features = no-cursor

# Window appearance
background-blur-radius = 15
window-padding-x = 8
window-padding-y = 8

# Color palette exported from iTerm
background = #22272e
foreground = #dcdcdc
cursor-color = #ffffff
selection-background = #bad6fb
selection-foreground = #000000

palette = 0=#15191e
palette = 1=#a74532
palette = 2=#57bf38
palette = 3=#c7c43f
palette = 4=#2e43c0
palette = 5=#b149b8
palette = 6=#59c2c6
palette = 7=#c7c7c7
palette = 8=#686868
palette = 9=#d07e78
palette = 10=#82e498
palette = 11=#eae24a
palette = 12=#a7abed
palette = 13=#d483dc
palette = 14=#8efafd
palette = 15=#ffffff

bold-is-bright = true
