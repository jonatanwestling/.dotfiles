cmd - 1 : open -a ghostty
# open browser
cmd - 2 : open -a zen

cmd - 3 : open -a chatgpt

#cmd - 4 : open -a "Visual Studio Code"
cmd - 4 : open -a antigravity

#=== Least opened apps in the middle ==
cmd - 5 : open -a discord

cmd - 6 : open -a finder
#======================================
cmd - 7 : open -a notes

#cmd - 8 : open -a "Android Studio"
cmd - 8 : open -a spotify  
cmd - 9 : open -a preview

#cmd - 0 : open -a excalidrawz
#Shifted ==============================

#alternative browser
cmd + shift - 2 : open -a firefox

cmd + shift - 5 : open -a slack

cmd + shift - 9 : open -a xcode

cmd + shift - 0 : open -a simulator

# Hypr key ===============================
cmd + ctrl + shift + alt - b : open -a zen
cmd + ctrl + shift + alt - t : open -a ghostty

# Yabai ===============================
cmd + ctrl + shift + alt - r : yabai --restart-service
cmd + ctrl + shift + alt - s : yabai --stop-service
cmd + ctrl + shift + alt - a : yabai --start-service

# toggle floating window
cmd + ctrl + shift + alt - f : yabai -m window --toggle float

# Toggle between stack and bsp
cmd + ctrl + shift + alt - l : \
  if yabai -m query --spaces --space | jq -e '.type == "stack"' >/dev/null; then \
    yabai -m space --layout bsp; \
  else \
    yabai -m space --layout stack; \
  fi

cmd + ctrl + shift + alt - 1 : yabai -m space --focus 1
cmd + ctrl + shift + alt - 2 : yabai -m space --focus 2
cmd + ctrl + shift + alt - 3 : yabai -m space --focus 3

